{
  "name": "sisi-blur",
  "displayName": "sisi-blur",
  "version": "0.0.1",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build --target=firefox-mv2 --source-maps",
    "web-ext:sign": "web-ext sign --api-key=$WEB_EXT_API_KEY --api-secret=$WEB_EXT_API_SECRET --channel=unlisted --source-dir=build/firefox-mv2-prod",
    "release:ci:firefox": "pnpm build && pnpm web-ext:sign"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.2",
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.12.0",
    "@vladmandic/human": "^3.3.2",
    "plasmo": "^0.89.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@plasmohq/rps": "^1.8.7",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3",
    "web-ext": "^8.2.0"
  },
  "manifest": {
    "permissions": [
      "activeTab",
      "tabs"
    ],
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "web_accessible_resources": [
      {
        "matches": [
          "<all_urls>"
        ],
        "resources": [
          "samples/",
          "models/"
        ]
      }
    ],
    "externally_connectable": {
      "matches": [
        "*://*.localhost.com/*"
      ]
    }
  },
  "contributors": [
    "louis <louis@plasmo.com>",
    "udayan"
  ]
}